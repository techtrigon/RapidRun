{
  "name": "RapidRun",
  "displayName": "RapidRun",
  "publisher": "DevVikramSingh",
  "description": "Quickly Run Python, C, C++, JavaScript, Java, C#, TypeScript codes",
  "icon": "./RapidRun.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/techtrigon/RapidRun"
  },
  "version": "1.1.0",
  "license": "GNU",
  "keywords": [
    "C",
    "run",
    "Compile",
    "C plus plus",
    "C sharp",
    "java",
    "python",
    "javaScript",
    "typeScript",
    "c++",
    "fast"
  ],
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [ "onStartupFinished" ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "RapidRun.runner",
        "title": "Run Code ðŸŸ¢"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "RapidRun Settings",
      "properties": {
        "RapidRun.cppCompiler": {
          "type": "string",
          "default": "g++",
          "description": "Compiler for C++ files."
        },
        "RapidRun.cppFlags": {
          "type": "string",
          "default": "-D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS -std=c++23 -O2 -flto -pipe -Wall -Wextra -Wno-unused-parameter -Wno-unused-variable",
          "description": "Flags for C++ compilation."
        },
        "RapidRun.javaCompiler": {
          "type": "string",
          "default": "javac",
          "description": "Compiler for Java files."
        },
        "RapidRun.javaFlags": {
          "type": "string",
          "default": "",
          "description": "Flags for Java compilation."
        },
        "RapidRun.pythonInterpreter": {
          "type": "string",
          "default": "python",
          "description": "Interpreter for Python files."
        },
        "RapidRun.pythonFlags": {
          "type": "string",
          "default": "",
          "description": "Flags for running Python."
        },
        "RapidRun.jsRuntime": {
          "type": "string",
          "default": "node",
          "description": "Runtime for JavaScript files."
        },
        "RapidRun.jsFlags": {
          "type": "string",
          "default": "",
          "description": "Flags for running JavaScript."
        },
        "RapidRun.tsCompiler": {
          "type": "string",
          "default": "tsc",
          "description": "Compiler for TypeScript files."
        },
        "RapidRun.tsFlags": {
          "type": "string",
          "default": "",
          "description": "Flags for running TypeScript."
        },
        "RapidRun.csharpCompiler": {
          "type": "string",
          "default": "dotnet run",
          "description": "Command for running C# files."
        },
        "RapidRun.csharpFlags": {
          "type": "string",
          "default": "",
          "description": "Flags for running C#."
        },
        "RapidRun.cCompiler": {
          "type": "string",
          "default": "gcc",
          "description": "Compiler for C files."
        },
        "RapidRun.cFlags": {
          "type": "string",
          "default": "-pipe -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS -Wall -Wextra -O2 -flto -std=c17",
          "description": "Flags for C compilation."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "eslint": "^8.57.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0"
  }
}
