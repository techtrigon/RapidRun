{
  "name": "RapidRun",
  "displayName": "RapidRun",
  "publisher": "DevVikramSingh",
  "description": "Quickly Run Python, C, C++, JavaScript, Java, C#, TypeScript codes",
  "icon": "./RapidRun.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/techtrigon/RapidRun"
  },
  "version": "1.2.0",
  "license": "GNU",
  "keywords": [
    "C",
    "C++",
    "C#",
    "run",
    "compile",
    "build",
    "execute",
    "fast",
    "Java",
    "Python",
    "JavaScript",
    "TypeScript",
    "automation",
    "terminal",
    "code",
    "development",
    "programming",
    "productivity",
    "multilanguage",
    "compiler",
    "interpreter",
    "IDE",
    "VSCode",
    "extensions",
    "debug",
    "error handling",
    "tooling",
    "code runner",
    "build tool",
    "cross-platform",
    "integration",
    "coding",
    "scripting",
    "workflow",
    "code execution",
    "coderunner",
    "github",
    "git",
    "language support",
    "optimization",
    "software development"
  ],
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "RapidRun.runner",
        "title": "Run Code ðŸŸ¢"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "RapidRun Settings",
      "properties": {
        "RapidRun.cppCompiler": {
          "type": "string",
          "default": "g++",
          "description": "Compiler for C++ files."
        },
        "RapidRun.cppFlags": {
          "type": "string",
          "default": "-pipe -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS -std=c++23 -O2 -flto -Wall -Wextra -Wno-unused-parameter -Wno-unused-variable"
        },
        "RapidRun.javaCompiler": {
          "type": "string",
          "default": "javac",
          "description": "Compiler for Java files."
        },
        "RapidRun.javaFlags": {
          "type": "string",
          "default": ""
        },
        "RapidRun.pythonInterpreter": {
          "type": "string",
          "default": "python",
          "description": "Interpreter for Python files."
        },
        "RapidRun.pythonFlags": {
          "type": "string",
          "default": ""
        },
        "RapidRun.jsRuntime": {
          "type": "string",
          "default": "node",
          "description": "Runtime for JavaScript files."
        },
        "RapidRun.javascriptFlags": {
          "type": "string",
          "default": ""
        },
        "RapidRun.tsCompiler": {
          "type": "string",
          "default": "tsc",
          "description": "Compiler for TypeScript files."
        },
        "RapidRun.typescriptFlags": {
          "type": "string",
          "default": ""
        },
        "RapidRun.csharpCompiler": {
          "type": "string",
          "default": "dotnet run",
          "description": "Command for running C# files."
        },
        "RapidRun.csharpFlags": {
          "type": "string",
          "default": ""
        },
        "RapidRun.cCompiler": {
          "type": "string",
          "default": "gcc",
          "description": "Compiler for C files."
        },
        "RapidRun.cFlags": {
          "type": "string",
          "default": "-pipe -D_FORTIFY_SOURCE=2 -D_GLIBCXX_ASSERTIONS -Wall -Wextra -O2 -flto -std=c17"
        },
        "RapidRun.saveBeforeRun": {
          "type": "string",
          "default": "single",
          "enum": [ "single", "all", "none" ],
          "description": "Specify whether to save the active file, all open files, or none before running the code."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.92.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0"
  }
}
